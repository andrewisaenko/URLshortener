@using URLshortener.Models;
@model RegisterViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ToDoList - Register</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/auth.css?v=1" />
    <link rel="stylesheet" href="~/css/site.css?v=1" />

</head>

<body class="bg-dark text-white">

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card bg-dark border-light p-4" style="width: 350px;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="text-white">Register</h3>
                <a href="/Account/Login" class="auth-form">Sign In</a>
            </div>
            <form asp-action="Register" asp-controller="Account" novalidate>

                <!-- Username Input -->
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-light text-light">
                            <i class="fa fa-user"></i>
                        </span>
                        <div class="form-floating">
                            <input asp-for="Username" type="text" class="form-control bg-dark border-light text-white" id="Username" placeholder="My name is">
                            <label for="Username">My name is</label>
                        </div>
                    </div>
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>

                <!-- Password Input -->
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-light text-light">
                            <i class="fa fa-lock"></i>
                        </span>
                        <div class="form-floating">
                            <input asp-for="Password" type="password" class="form-control bg-dark border-light text-white" id="Password" placeholder="Password">
                            <label for="Password" class="bg-transparent">Password</label>
                        </div>
                    </div>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-light text-light">
                            <i class="fa fa-lock"></i>
                        </span>
                        <div class="form-floating">
                            <input asp-for="ConfirmPassword" type="password" class="form-control bg-dark border-light text-white" id="ConfirmPassword" placeholder="ConfirmPassword">
                            <label for="ConfirmPassword" class="bg-transparent">Confirm password</label>
                        </div>
                    </div>
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>


                <div class="d-grid">
                    <button type="submit" class="btn btn-warning">Register</button>
                </div>
            </form>            
        </div>
    </div>

    <script src="~/lib/bootstrap/js/bootstrap.js"></script>

</body>

</html>
